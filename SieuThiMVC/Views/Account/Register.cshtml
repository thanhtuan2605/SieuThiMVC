@model SieuThiMVC.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Gender)
                <span>Male</span>
                @Html.RadioButtonFor(m => m.Gender,"Nam", new{id="male", style="width:30px"})
                <span>Female</span>
                @Html.RadioButtonFor(m => m.Gender,"Nữ", new{id="female", style="width:30px"})
            </li>
            <li>
                @Html.LabelFor(m => m.Birthday)
                @Html.TextBoxFor(m => m.Birthday)
            </li>
            <li>
                @Html.LabelFor(m => m.Address)
                @Html.TextBoxFor(m => m.Address)
            </li>
            <li>
                @Html.LabelFor(m => m.Identitynum)
                @Html.TextBoxFor(m => m.Identitynum)
            </li>
            <li>
                @Html.LabelFor(m => m.Phonenum)
                @Html.TextBoxFor(m => m.Phonenum)
            </li>
            <li>
                @Html.LabelFor(m => m.SQuestion)
                @Html.DropDownListFor(m=>m.SQuestion, new SelectList(SieuThiMVC.DataAccess.UserProfileDBO.GetQuestions(),"ID","Q"))
            </li>
            <li>
                @Html.LabelFor(m => m.SAnswer)
                @Html.TextBoxFor(m => m.SAnswer)
            </li>

        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
